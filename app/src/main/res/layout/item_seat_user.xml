<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_avatar_talking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_sound_waves"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_avatar_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar_talking"
        app:layout_constraintEnd_toEndOf="@id/iv_avatar_talking"
        app:layout_constraintStart_toStartOf="@id/iv_avatar_talking"
        app:layout_constraintTop_toTopOf="@id/iv_avatar_talking" />

    <ImageView
        android:id="@+id/iv_mic_off"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/half_black_fill_circle_bg"
        android:src="@drawable/icon_mic_off_white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        app:layout_constraintEnd_toEndOf="@id/iv_avatar"
        app:layout_constraintStart_toStartOf="@id/iv_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_avatar" />

    <ImageView
        android:id="@+id/tv_send_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:src="@drawable/icon_owner"
        app:layout_constraintEnd_toEndOf="@id/iv_avatar"
        app:layout_constraintStart_toStartOf="@id/iv_avatar"
        app:layout_constraintTop_toBottomOf="@id/iv_avatar" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#ff000000"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@id/iv_avatar"
        app:layout_constraintStart_toStartOf="@id/iv_avatar"
        app:layout_constraintTop_toBottomOf="@id/iv_avatar"
        tools:text="RossðŸŒ¹RossðŸŒ¹" />

    <!--    <androidx.constraintlayout.widget.Group-->
    <!--        android:id="@+id/group_on_seat_ui"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        app:constraint_referenced_ids="iv_avatar_talking,iv_avatar,iv_mic_off,iv_owner_avatar,tv_user_name" />-->

    <!--    <androidx.constraintlayout.widget.Group-->
    <!--        android:id="@+id/group_out_of_seat_ui"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        app:constraint_referenced_ids="iv_lock,iv_seat,iv_join" />-->

    <ImageView
        android:id="@+id/iv_lock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/grey_fill_circle_bg"
        android:src="@drawable/icon_lock"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        app:layout_constraintEnd_toEndOf="@id/iv_avatar"
        app:layout_constraintStart_toStartOf="@id/iv_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_avatar" />

    <ImageView
        android:id="@+id/iv_seat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/grey_fill_circle_bg"
        android:src="@drawable/icon_seat"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        app:layout_constraintEnd_toEndOf="@id/iv_avatar"
        app:layout_constraintStart_toStartOf="@id/iv_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_avatar" />

    <ImageView
        android:id="@+id/iv_join"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/grey_fill_circle_bg"
        android:src="@drawable/icon_join"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        app:layout_constraintEnd_toEndOf="@id/iv_avatar"
        app:layout_constraintStart_toStartOf="@id/iv_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_avatar" />

</androidx.constraintlayout.widget.ConstraintLayout>